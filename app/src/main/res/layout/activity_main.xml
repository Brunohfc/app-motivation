<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.MainActivity"

    >

    <TextView
        android:id="@+id/text_ola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:text="OlÃ¡!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/text_aprender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:text="O que vamos aprender hoje?"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ola"

        />

    <!--    <View-->
    <!--        android:id="@+id/view_center"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="0dp"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.5"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        />-->


    <ImageView
        android:id="@+id/image_dev"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/image_development"
        app:layout_constraintEnd_toStartOf="@id/image_design"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_aprender" />

    <ImageView
        android:id="@+id/image_design"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/image_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_dev"
        app:layout_constraintTop_toBottomOf="@id/text_aprender"

        />

    <ImageView
        android:id="@+id/explore"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/image_explore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_dev"
        app:layout_constraintTop_toBottomOf="@id/image_design" />

    <ImageView
        android:id="@+id/image_ai"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/image_ai"
        app:layout_constraintEnd_toStartOf="@id/image_design"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_dev" />

    <TextView
        android:id="@+id/text_view_cursosPopulares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Cursos populares"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_ai"

        />

    <TextView
        android:id="@+id/text_view_verTodos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Ver todos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/explore" />

    <View
        android:id="@+id/view_cursos"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/image_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_cursosPopulares" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desenvolvimento android"
        android:textStyle="bold"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@id/view_cursos"
        app:layout_constraintStart_toStartOf="@id/view_cursos"
        app:layout_constraintBottom_toBottomOf="@id/view_cursos"
        />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/baseline_android_24"
        app:layout_constraintEnd_toEndOf="@id/view_cursos"
        app:layout_constraintTop_toTopOf="@id/view_cursos"
        app:layout_constraintBottom_toBottomOf="@id/view_cursos"
        android:layout_marginEnd="6dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>